@model IEnumerable<Folders.Models.Folder>;

@{
    ViewData["Title"] = "Folders";
}

<h2>Folders</h2>

<button class="btn btn-dark my-3">Add</button>

@if (Model.Count() > 0)
{
    <table class="table table-borderless table-striped">
        @foreach (var folder in Model)
        {
            @if (folder.ParentId == 2)
            {
                <tr>
                    <td>@folder.Name</td>
                </tr>

                childFolder(folder, 0);
            }
        }
    </table>
}
else
{
    <p>No folders available.</p>
}

@{
    void childFolder(Folder mainFolder, int depth)
    {
        depth++;
        foreach (var f in Model)
        {
            if (f.ParentId == mainFolder.Id)
            {
                <tr>
                    <td style="text-indent: @(depth + "rem")">@f.Name</td>
                </tr>
                childFolder(f, depth);
            }
        }
        depth--;
    }
}