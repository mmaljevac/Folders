@model IEnumerable<Folders.FolderViewModel>;

@{
    ViewData["Title"] = "Folders";
}

<div class="row">
    <div class="col-6">
        <h2>Folders</h2>

        <button class="btn btn-dark my-3">Add</button>

        @if (Model.Count() > 0)
        {
            <table class="table table-borderless table-striped">
                @foreach (var folder in Model)
                {
                    <tr>
                        <td>@folder.Name</td>
                    </tr>
                    showChildren(folder);
                }
            </table>
        }
        else
        {
            <p>No folders available.</p>
        }
    </div>
    <div class="col-6">
        <h2>Files</h2>

        <table class="table table-borderless table-striped">
        </table>
    </div>
</div>


@{
    void showChildren(FolderViewModel folder)
    {
        foreach (var child in folder.ChildFolders)
        {
            <tr>
                <td style="text-indent: @(child.Depth + "rem")">@child.Name</td>
            </tr>
            showChildren(child);
        }
    }
}