@model Folders.Models.Folder

@{
    ViewData["Title"] = "Details";
}

<div>
    <a asp-controller="Home" asp-action="Index" asp-route-id="@Model.Id" class="my-2 btn btn-sm bg-light">&lt; Back</a>
</div>

<h1>Details</h1>

<div>
    <h4>Folder</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParentFolder)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentFolder.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
</div>
